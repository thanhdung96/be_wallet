{% extends 'base.html.twig' %}

{% block title %}Trans{% endblock %}

{% block body %}
    <h1>Trans</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tran.id }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ tran.note }}</td>
            </tr>
            <tr>
                <th>Type</th>
                {% if tran.type == 0 %}
                    <td>Revenue</td>
                {% elseif tran.type == 1 %}
                    <td>Expense</td>
                {% else %}
                    <td>Transfer</td>
                {% endif %}

            </tr>
            {% if tran.category is not null %}
                <tr>
                    <th>Category</th>
                    <td>{{ tran.category.name }}</td>
                </tr>
            {% endif %}
            <tr>
                <th>Amount</th>
                <td>{{ tran.amount }}</td>
            </tr>
            <tr>
                <th>DateTime</th>
                <td>{{ tran.dateTime ? tran.dateTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Fee</th>
                <td>{{ tran.fee }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ tran.created ? tran.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modified</th>
                <td>{{ tran.modified ? tran.modified|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('trans_index') }}">back to list</a>

    <a href="{{ path('trans_edit', {'id': tran.id}) }}">edit</a>

    {{ include('trans/_delete_form.html.twig') }}
{% endblock %}
