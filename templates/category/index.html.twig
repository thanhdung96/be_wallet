{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1>Category index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Color</th>
                <th>Type</th>
                <th>Active</th>
                <th>Ordering</th>
                <th>Icon</th>
                <th>Created</th>
                <th>Modified</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.color }}</td>
                <td>{{ category.type }}</td>
                <td>{{ category.active }}</td>
                <td>{{ category.ordering }}</td>
                <td>{{ category.icon }}</td>
                <td>{{ category.created ? category.created|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ category.modified ? category.modified|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('category_show', {'id': category.id}) }}">show</a>
                    <a href="{{ path('category_edit', {'id': category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('category_new') }}">Create new</a>
{% endblock %}
