{% extends 'base.html.twig' %}

{% block title %}Wallet index{% endblock %}

{% block body %}
    <h1>Wallet index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Color</th>
                <th>Amount</th>
                <th>InitialAmount</th>
                <th>Active</th>
                <th>Icon</th>
                <th>Created</th>
                <th>Modified</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for wallet in wallets %}
            <tr>
                <td>{{ wallet.id }}</td>
                <td>{{ wallet.name }}</td>
                <td>{{ wallet.color }}</td>
                <td>{{ wallet.amount }}</td>
                <td>{{ wallet.initialAmount }}</td>
                <td>{{ wallet.active ? 'Yes' : 'No' }}</td>
                <td>{{ wallet.icon }}</td>
                <td>{{ wallet.created ? wallet.created|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ wallet.modified ? wallet.modified|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('wallet_show', {'id': wallet.id}) }}">show</a>
                    <a href="{{ path('wallet_edit', {'id': wallet.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('wallet_new') }}">Create new</a>
{% endblock %}
