{% extends 'base.html.twig' %}

{% block title %}Wallet{% endblock %}

{% block body %}
    <h1>Wallet</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ wallet.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ wallet.name }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ wallet.color }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ wallet.amount }}</td>
            </tr>
            <tr>
                <th>InitialAmount</th>
                <td>{{ wallet.initialAmount }}</td>
            </tr>
            <tr>
                <th>Currency</th>
                <td>{{ wallet.currency.currencyName }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ wallet.active ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Icon</th>
                <td>{{ wallet.icon }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ wallet.created ? wallet.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modified</th>
                <td>{{ wallet.modified ? wallet.modified|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('wallet_index') }}">back to list</a>

    <a href="{{ path('wallet_edit', {'id': wallet.id}) }}">edit</a>

    {{ include('wallet/_delete_form.html.twig') }}
{% endblock %}
