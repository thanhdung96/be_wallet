{% extends 'security/security_base.html.twig' %}

{% block title %}
    Register
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            {{ form_start(form, {'attr': {'class': 'form col-md-8 mb-5'}}) }}
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Account name</label>
                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                        {% if form_errors(form.name) %}
                            <small class="form-text text-muted">
                                {{ form_errors(form.name) }}
                            </small>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email</label>
                        {{ form_widget(form.email, {'attr': {
                            'class': 'form-control',
                            'type': 'email'
                        }}) }}
                        {% if form_errors(form.email) %}
                            <small class="form-text text-muted">
                                {{ form_errors(form.email) }}
                            </small>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Password</label>
                        {{ form_widget(form.password, {'attr': {
                            'class': 'form-control',
                            'type': 'password'
                        }}) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Current Balance</label>
                        {{ form_widget(form.balance, {'attr': {'class': 'form-control'}}) }}
                        {% if form_errors(form.balance) %}
                            <small class="form-text text-muted">
                                {{ form_errors(form.balance) }}
                            </small>
                        {% endif %}
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Default currency</label>
                        {{ form_widget(form.currency, {'attr': {'class': 'form-control'}}) }}
                        {% if form_errors(form.currency) %}
                            <small class="form-text text-muted">
                                {{ form_errors(form.currency) }}
                            </small>
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="text-right">
                <button class="btn btn-primary btn-lg" type="submit">
                    Save
                </button>
            </div>
            {{ form_end(form) }}

            <br>
            <div class="text-right col-md-8">
                <p>
                    Already have an account?</br>
                    <a href="{{ path('app_login') }}">Return to login page</a>
                </p>
            </div>
        </div>
    </div>

{% endblock %}
